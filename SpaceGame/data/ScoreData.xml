<?xml version="1.0" encoding="utf-8" ?> 
<!--Define parameters for Score Events
  Score Data Attributes:
    Name (string)     : Must match name in ScoreType enum
    Text (string)     : Text to display on screen for popup
    Points (int)      : Score value of event
    Color (Color)     : Color of popup text
    Scale (float)     : Size of popup text
-->
<ScoreDatas>
  <ScoreData Name="MeleeKill"
             Text="Melee Kill!"
             Points="6"
             Color="255,255,0"
             Scale="2">
  </ScoreData>
  <ScoreData Name="RangeKill"
             Text="Range Kill!"
             Points="4"
             Color="255,128,0"
             Scale="2">
  </ScoreData>
  <ScoreData Name="EatFrozen"
             Text="Chill Pill!"
             Points="10"
             Color="0,255,255"
             Scale="2">
  </ScoreData>
  <ScoreData Name="EatBurning"
             Text="Hot Shot!"
             Points="8"
             Color="255,0,0"
             Scale="2">
  </ScoreData>
  <ScoreData Name="EatLiving"
             Text="Live Bait!"
             Points="12"
             Color="0,153,0"
             Scale="2">
  </ScoreData>
</ScoreDatas>